<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_recycler_item_background"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/sentido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/green_500"
        android:textSize="20dp"
        android:text="Porto - Viana do Castelo"
        />

    <TextView
        android:id="@+id/empresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sentido"
        android:fontFamily="@font/roboto"
        android:textColor="@color/gray_500"
        android:textSize="20dp"
        android:text="AV Minho"
        />

    <TextView
        android:id="@+id/horario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empresa"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="7:45 | 8:15 | 8:40 | 9:30 | 10:55 | 13:00 | 14:40 | 16:10 | 18:00 | 19:00 | 19:40"
        />

</RelativeLayout>